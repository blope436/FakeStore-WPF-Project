<Page x:Class="finalProject.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:finalProject.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main">



    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height=".5*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <Button x:Name="productsButton" Click="productsButton_Click" Margin="39" FontSize="20" FontStyle="Oblique">Products</Button>
        <Button x:Name="inventoryButton" Click="inventoryButton_Click" Margin="39" FontSize="20" FontStyle="Oblique" Grid.Column="1">Add Inventory</Button>
        <Button x:Name="updateButton" Click="updateButton_Click" Margin="39" FontSize="20" FontStyle="Oblique" Grid.Column="2">Update inventory </Button>
        <StackPanel Grid.Row="1" Grid.ColumnSpan="3">
            <Image Source="https://t4.ftcdn.net/jpg/03/61/52/11/360_F_361521131_tvclR3GrsVQBFVsUe1EPNFgH2MWIN1w7.jpg" />
        </StackPanel>
    </Grid>
</Page>
